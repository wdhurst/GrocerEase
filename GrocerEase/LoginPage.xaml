<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="#888888" NavigationPage.HasNavigationBar="false" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GrocerEase.LoginPage">
    <StackLayout Margin="20,50,20,50">
        <Label Text="GrocerEase" BackgroundColor="#40dca0" HorizontalTextAlignment="Center" WidthRequest="800" HorizontalOptions="Center" FontSize="45"></Label>
        <Image x:Name="imgLight" WidthRequest="150" HeightRequest="150" Margin="0,0,0,30"/>
        <Label Text="Email"></Label>
        <Entry Placeholder="Enter Your Email" x:Name="EmailEntry"></Entry>
        <Label Text="Password"></Label>
        <Entry Placeholder="Enter Your Password" x:Name="PasswordEntry" IsPassword="true">
        </Entry>
        <Button Text="Login" x:Name="LogIn" TextColor="Black" FontSize="30" BackgroundColor="#ccffd7" ></Button>
        <Label Text="Create an account:" HorizontalTextAlignment="Center" Margin="0,60,0,15" FontSize="25"></Label>
        <Button Text="Sign up as Customer" x:Name="CustmerSignUp" FontSize="18" TextColor="White" BackgroundColor="#535353"></Button>
        <Button Text="Sign up as Business" x:Name="OwnerSignUp" FontSize="18" TextColor="White" BackgroundColor="#535353"></Button>
    </StackLayout>
</ContentPage>
