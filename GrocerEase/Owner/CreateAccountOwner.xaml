<?xml version="1.0" encoding="utf-8" ?>
    
<!--***Business Management Account***-->
    
<ContentPage NavigationPage.HasNavigationBar="false" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GrocerEase.CreateAccountOwner">
    <StackLayout Margin="20,50,20,50">
        <Label Text="Email" />
        <Entry x:Name="EmailBox" Placeholder="Enter Your Email"/>
        <Label Text="Password" />
        <Entry x:Name="PasswordBox" Placeholder="Enter Your Password" IsPassword="true"/>
        <Label Text="Confirm Password" />
        <Entry x:Name="PassConfirmBox" Placeholder="Re-Enter Your Password" IsPassword="True"/>
        <Label Text="Business Name"/>
        <Entry x:Name="BusinessName" Placeholder="Enter the Business Name"/>
        <Label Text="Business Number"/>
        <Entry x:Name="BusinessNum" Placeholder="Enter Your Phone Number"/>
        <Button x:Name="CreateButton" Text="Create Account" FontSize="30" TextColor="Black" BackgroundColor="#ccffd7" Margin="0,0,0,50"/>
        <Button x:Name="LoginPage" Text="Log into existing account" FontSize="18" TextColor="White" BackgroundColor="#535353"/>
        <Button x:Name="Customer" Text="Sign up as Customer" FontSize="18" TextColor="White" BackgroundColor="#535353"/>
    </StackLayout>
</ContentPage>
